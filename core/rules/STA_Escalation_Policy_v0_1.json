{
  "sta_version": "0.1",
  "policy_id": "STA-ESCALATION-POLICY-0.1",
  "description": "Deterministic mapping from structural risk signals and violations to escalation levels.",
  "levels": [
    {
      "level": "none",
      "criteria": {
        "violations_count": 0,
        "max_structural_risk_score_lt": 0.2
      }
    },
    {
      "level": "advisory",
      "criteria": {
        "any_of": [
          {
            "violations_count_gte": 1,
            "structural_risk_score_lt": 0.5
          },
          {
            "violations_count_eq": 0,
            "structural_risk_score_gte": 0.2,
            "structural_risk_score_lt": 0.5
          }
        ]
      }
    },
    {
      "level": "board_review",
      "criteria": {
        "any_of": [
          {
            "violations_count_gte": 1,
            "structural_risk_score_gte": 0.5,
            "structural_risk_score_lt": 0.8
          },
          {
            "violations_count_gte": 2,
            "structural_risk_score_gte": 0.4
          }
        ]
      }
    },
    {
      "level": "critical",
      "criteria": {
        "any_of": [
          {
            "violations_count_gte": 1,
            "structural_risk_score_gte": 0.8
          },
          {
            "violations_count_gte": 3,
            "structural_risk_score_gte": 0.6
          }
        ]
      }
    }
  ],
  "notes": [
    "Escalation is based on structural tension indicators, not accusations.",
    "Engines may apply a minimum escalation floor specified by individual rules (escalation_level_min)."
  ],
  "versioning": {
    "status": "draft",
    "created_at": "2026-02-18T21:53:52Z"
  }
}